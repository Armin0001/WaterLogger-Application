@page
@model WaterLogger.Pages.CreateModel
@{
}



<h2>Add New Record</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="DrinkingWater.Date" class="control-label"></label>
                <input type="date" asp-for="DrinkingWater.Date" class="form-control" />
                <span asp-validation-for="DrinkingWater.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrinkingWater.Quantity" class="control-label"></label>
                <input asp-for="DrinkingWater.Quantity" class="form-control" />
                <span asp-validation-for="DrinkingWater.Quantity" class="text-danger"></span>
            </div>

           

            <div class="form-group">
                <input type="radio" name="DrinkingWater.Type" value="Big Bottle">
                <label asp-for="DrinkingWater.Type">Big Bottle</label>
                <input type="radio" name="DrinkingWater.Type" value="Medium Bottle">
                <label asp-for="DrinkingWater.Type">Medium Bottle</label><br>
                <input type="radio" name="DrinkingWater.Type" value="Small Bottle">
                <label asp-for="DrinkingWater.Type">Small Bottle</label>
                <span asp-validation-for="DrinkingWater.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }